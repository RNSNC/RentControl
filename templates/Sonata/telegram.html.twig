{% extends sonata_block.templates.block_base %}

{% block block %}
    <h4>Данные о загрузке в телеграм бот</h4>
    <label for="date1">С</label>
    <input type="date" id="date1" name="date1"><br>
    <label for="date2">По</label>
    <input type="date" id="date2" name="date2"><br>
    <input type="submit" id="submit_telegram">
    <div id="message_telegram" style="color: red"></div>
    <script>
        $('#submit_telegram').click(function (){
            let date1 = $('#date1').val(),
                date2 = $('#date2').val();
            $.get('/admin/telegram_ajax', {date1: date1, date2: date2}, function (data){
                $('#message_telegram').text(data);
            });
        })
    </script>
{% endblock %}
